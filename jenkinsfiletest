properties([
    parameters([[$class: 'GitParameterDefinition',
                                                     branch: 'master',
                                                     branchFilter: '.*',
                                                     defaultValue: '',
                                                     description: 'Please Select Version',
                                                     name: 'Version',
                                                     quickFilterEnabled: false,
                                                     selectedValue: 'NONE',
                                                     sortMode: 'NONE',
                                                     tagFilter: '*',
                                                     type: 'PT_BRANCH_TAG'
                                                     ]
    ])
])

pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
